<?xml version="1.0" encoding="UTF-8"?>
<PathAssistant xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <entityName>Opportunity</entityName>
    <fieldName>StageName</fieldName>
    <masterLabel>Car Sale</masterLabel>
    <pathAssistantSteps>
        <fieldNames>Description</fieldNames>
        <fieldNames>CloseDate</fieldNames>
        <info>&lt;p&gt;Describe why this opportunity was lost in the description box.&lt;/p&gt;</info>
        <picklistValueName>Closed Lost</picklistValueName>
    </pathAssistantSteps>
    <pathAssistantSteps>
        <fieldNames>CloseDate</fieldNames>
        <info>&lt;p&gt;Input the close date for this opportunity.&lt;/p&gt;&lt;p&gt;&lt;br&gt;&lt;/p&gt;&lt;p&gt;Congratulations!!&lt;/p&gt;</info>
        <picklistValueName>Closed Won</picklistValueName>
    </pathAssistantSteps>
    <pathAssistantSteps>
        <fieldNames>Pricebook2Id</fieldNames>
        <fieldNames>Amount</fieldNames>
        <info>&lt;p&gt;Depending on the current events / discounts currently happening, along with any negotiations made, input the final amount.&lt;/p&gt;</info>
        <picklistValueName>Negotiation/Review</picklistValueName>
    </pathAssistantSteps>
    <pathAssistantSteps>
        <fieldNames>Amount</fieldNames>
        <fieldNames>TotalOpportunityQuantity</fieldNames>
        <fieldNames>ExpectedRevenue</fieldNames>
        <info>&lt;p&gt;Input the amount, quantity, and expect revenue from their order.&lt;/p&gt;</info>
        <picklistValueName>Proposal/Price Quote</picklistValueName>
    </pathAssistantSteps>
    <pathAssistantSteps>
        <fieldNames>OwnerId</fieldNames>
        <fieldNames>LeadSource</fieldNames>
        <fieldNames>Description</fieldNames>
        <info>&lt;p&gt;Input your name as the Opportunity Owner.&lt;/p&gt;&lt;p&gt;&lt;br&gt;&lt;/p&gt;&lt;p&gt;Select where the lead was generated from (online, email, phone).&lt;/p&gt;&lt;p&gt;&lt;br&gt;&lt;/p&gt;&lt;p&gt;Describe what the customer is looking for.&lt;/p&gt;</info>
        <picklistValueName>Prospecting</picklistValueName>
    </pathAssistantSteps>
    <pathAssistantSteps>
        <fieldNames>Amount</fieldNames>
        <fieldNames>Probability</fieldNames>
        <fieldNames>NextStep</fieldNames>
        <info>&lt;p&gt;Check the customer&amp;#39;s credit score.&lt;/p&gt;&lt;p&gt;&lt;br&gt;&lt;/p&gt;&lt;p&gt;If the customer&amp;#39;s credit score does not meet requirement, then select the appropriate next step fro them.&lt;/p&gt;</info>
        <picklistValueName>Qualification</picklistValueName>
    </pathAssistantSteps>
    <recordTypeName>Car_Sale</recordTypeName>
</PathAssistant>
